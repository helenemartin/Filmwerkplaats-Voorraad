<% if notice %>
<p> id='notice'><%= notice %></p>
<% end %>
<h1>Filmwerkplaats Voorraad</h1>

<% @products.each do |product| %>
  <div class= "entry">
   
    <h3><%= product.title %></h3>
    <p><%= sanitize(product.description) %></p>
  <div class = "price_line">
    <span class= "price"><%= product.price %></span>

  </div>
</div>

<% end %>

